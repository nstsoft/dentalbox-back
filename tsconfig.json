{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@config": ["./config/index.ts"],
      "@src/*": ["src/*"],
      "@entities/*": ["src/domains/entities/*"],
      "@sources": ["src/data-layer/sources/index.ts"],
      "@utils": ["src/utils/index.ts"],
      "@domains": ["src/domains/index.ts"],
      "@repositories": ["src/data-layer/repositories/index.ts"],
      "@controllers": ["src/presenters/controllers/index.ts"],
      "@data": ["src/data-layer/index.ts"],
      "@middlewares": ["src/presenters/middlewares/index.ts"],
      "@errors": ["src/errors/index.ts"],
      "@providers": ["src/providers/index.ts"],
      "@services": ["src/services/index.ts"],
      "@useCases": ["src/use-cases/index.ts"]
    }
  }
}
