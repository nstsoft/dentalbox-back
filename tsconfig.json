{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@config": ["./config/index.ts"],
      "@src/*": ["src/*"],
      "@entities/*": ["src/domains/entities/*"],
      "@sources": ["src/data/sources"],
      "@utils": ["src/utils/index.ts"],
      "@domains": ["src/domains/index.ts"],
      "@repositories": ["src/data/repositories/index.ts"],
      "@controllers": ["src/presenters/controllers"],
      "@data": ["src/data/index.ts"]
    }
  }
}
